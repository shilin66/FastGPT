Unit]
Description=xin
After=rc-local.service

[Service]
Type=simple
User=root
Group=root
Environment="XINFERENCE_HOME=/data/xin"
Environment="PATH=/usr/local/miniconda3/envs/xin/bin:$PATH"
Environment="PYTHONPATH=/usr/local/miniconda3/envs/xin/lib/python3.11/site-packages"
ExecStart=/usr/local/miniconda3/envs/xin/bin/xinference-local --host 0.0.0.0  --port 9997 --auth-config /data/xin/authen.json --log-level info
Restart=always

[Install]
WantedBy=multi-user.target